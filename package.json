{
  "name": "zulaica-dot-info",
  "author": "David Zulaica",
  "version": "2.2.0",
  "engines": {
    "node": ">=16.16.0"
  },
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zulaica/zulaica-dot-info.git"
  },
  "bugs": {
    "url": "https://github.com/zulaica/zulaica-dot-info/issues"
  },
  "homepage": "https://github.com/zulaica/zulaica-dot-info#readme",
  "@comment scripts": {
    "lint": [
      "Linters exit with a non-zero code when warnings or errors are found.",
      "In order to run both linters sequentially, `|| true` is used to coerce",
      "an exit code of `0` to let the next command run."
    ]
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:style && npm run build:script && npm run build:html",
    "build:clean": "node ./lib/processors/preflight.mjs",
    "build:html": "node ./lib/processors/posthtml.mjs",
    "build:script": "browserify source/script.hash.js -o build/script.hash.js -t [ babelify ]",
    "build:style": "node ./lib/processors/postcss.mjs",
    "dev": "browser-sync source --watch --no-ui --port 50001",
    "lint": "npm run lint:js || true && npm run lint:css",
    "lint:css": "stylelint \"source/**/*.css\" --custom-formatter ./lib/formatters/stylelint.js",
    "lint:js": "eslint \"source/**/*.js\" \"lib/**/*.*js\" --format ./lib/formatters/eslint.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "autoprefixer": "^10.4.8",
    "babelify": "^10.0.0",
    "browser-sync": "^2.27.10",
    "browserify": "^17.0.0",
    "cssnano": "^5.1.13",
    "cssnano-preset-advanced": "^5.3.8",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "htmlnano": "^2.0.2",
    "postcss": "^8.4.16",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.8.0",
    "postcss-url": "^10.1.3",
    "posthtml": "^0.16.6",
    "posthtml-hash": "^1.2.2",
    "prettier": "^2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-prettier": "^2.0.0"
  },
  "volta": {
    "node": "16.16.0",
    "npm": "8.13.2"
  }
}
